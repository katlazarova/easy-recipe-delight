{% set heading_level = heading_level|default(3) %}
{% set is_page_title =  is_page_title|default(heading_level == 1 ? true) %}
{% set omit_base_class = omit_base_class|default(false) %}
{% if not omit_base_class %}
  {% set heading_attributes = heading_attributes|default(create_attribute()).addClass([
    heading_level == 1 ? 'page-title',
    heading_level == 2 and not is_page_title ? 'subheading'
  ]) %}
{% endif %}

<h{{ heading_level }} {{ heading_attributes }}>
  {% if heading_url %}
    {% include "@components/_link.twig" with {
      link_text: heading_text,
      link_attributes: link_attributes,
      link_url: heading_url
    } %}
  {% else %}
    {{ heading_text }}
  {% endif %}
</h{{ heading_level }}>
