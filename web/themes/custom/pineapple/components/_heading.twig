{% set heading_attributes = heading_attributes|default(create_attribute()) %}
{% set heading_level = heading_level|default('3') %}

{% if heading_level == '1' %}
  <h1 {{ heading_attributes }}>{{ heading }}</h1>
{% elseif heading_level == '2' %}
  <h2 {{ heading_attributes }}>{{ heading }}</h2>
{% else %}
  <h3 {{ heading_attributes }}>{{ heading }}</h3>
{% endif %}
