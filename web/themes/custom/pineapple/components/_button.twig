{% set button_attributes = button_attributes|default(create_attribute()).addClass([
  'button',
  button_type|default('button--primary'),
]) %}

{% if button_url %}
  {% set button_element = 'a' %}
  {% set anchor_link %}
    href="{{ button_url }}"
  {% endset %}
{% else %}
  {% set button_element = 'button' %}
{% endif %}

<{{ button_element }} {{ button_attributes }} {{ anchor_link }}>{{ button_text }}</{{ button_element }}>
